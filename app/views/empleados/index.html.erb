<h1>Listing empleados</h1>

<br />
<%= form_tag empleados_path, :method => 'get' do %>
	<%= text_field_tag :q, params[:q] %>
	<%= submit_tag 'Buscar' %>
<% end %>
<br />

<table>
  <tr>
    <th>Empleadoid</th>
    <th>Nombreempleado</th>
    <th>Apellido1</th>
    <th>Apellido2</th>
    <th>Identificacion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @empleados.each do |empleado| %>
  <tr>
    <td><%= empleado.empleadoid %></td>
    <td><%= empleado.nombreempleado %></td>
    <td><%= empleado.apellido1 %></td>
    <td><%= empleado.apellido2 %></td>
    <td><%= empleado.identificacion %></td>
    <td><%= link_to 'Show', empleado %></td>
    <td><%= link_to 'Edit', edit_empleado_path(empleado) %></td>
    <td><%= link_to 'Destroy', empleado, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= page_entries_info @empleados %>

<br /> 
<br /> 

<%= will_paginate @empleados %>

<br /> 
<br /> 

<%= link_to 'New Empleado', new_empleado_path %>
